<Window x:Class="DeskTop.Auth.FrmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskTop.Auth"
        mc:Ignorable="d"
        Title="Авторизация" Height="150" Width="230">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Логин" Margin="3"/>
        <TextBox Name="txtLogin" Width="150"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
        <TextBlock Text="Пароль" Margin="3"/>
        <PasswordBox Name="txtPassword" Width="150"/>
    </StackPanel>
        <Button Name="btnOk" IsDefault="True" Content="OK"  Width="80" Height="25" Grid.Row="2" Click="btnOk_Click"/>
    </Grid>

</Window>
