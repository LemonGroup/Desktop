<Window x:Class="DeskTop.Views.FrmEditSite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskTop.Views"
        xmlns:conv="clr-namespace:DeskTop.Util.Converters"
        xmlns:converters="clr-namespace:DeskTop.Util.Converters"
        mc:Ignorable="d"
        Title="FrmEditSite" SizeToContent="Height" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Адрес сайта" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Url}" Margin="5"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
            <Button Name="btnOk" IsDefault="True" Content="OK" Width="80" Height="25" Click="btnOk_Click" Margin="0,5,5,5"/>
            <Button Name="btnCansel" Content="Отмена" IsCancel="True" Width="80" Height="25" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
